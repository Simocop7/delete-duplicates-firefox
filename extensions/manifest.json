{
  "manifest_version": 2,
  "name": "Delete Duplicates",
  "version": "1.0.0",
  "description": "Automatically remove duplicate files from Downloads folder",
  
  "permissions": [
    "downloads",
    "nativeMessaging",
    "storage"
  ],
  
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  
  "applications": {
    "gecko": {
      "id": "delete-duplicates@user"
    }
  }
}